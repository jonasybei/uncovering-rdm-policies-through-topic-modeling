    pt:describes pt:Topic_-1 ;
    ns1:text "GDPR: Regulation (EU) 2016/679 of the European Parliament and of the Council dated 27 April 2016 on the protection of individuals with regard to the processing of personal data and on the free movement of such data, replacing directive 95/46/EC (basic data protection regulation)."^^xsd:string .

pt:Chunk_35_17 a ns1:chunk ;
