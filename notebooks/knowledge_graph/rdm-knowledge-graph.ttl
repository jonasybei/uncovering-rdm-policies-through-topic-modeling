pt:Chunk_61_15 a ns1:chunk ;
    pt:describes pt:Topic_-1 ;
    ns1:text "5.4.1 The RGu Pl on a grant application or research project is responsible for managing research data which is generated or collected as part of the project, even when there are other partners on the project. This includes:"^^xsd:string .

pt:Chunk_61_16 a ns1:chunk ;
    pt:describes pt:Topic_2 ;
    ns1:text "5.4.1.1 completion of a Data Management Plan at the time of submission to any funder that requires it"^^xsd:string .

