    pt:describes pt:Topic_-1 ;
    ns1:text "5.2.1.1 development of research data strategy and policy"^^xsd:string .

pt:Chunk_61_9 a ns1:chunk ;
    pt:describes pt:Topic_20 ;
    ns1:text """5.2.1.2 developing support services including training, guidance and advice in research data management necessary to implement this policy
